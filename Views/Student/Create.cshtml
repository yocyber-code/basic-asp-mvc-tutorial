@model Student;
@{
    ViewData["Title"] = "บันทึกคะแนนสอบ";
}

<h1 class="text-center">บันทึกคะแนนสอบ</h1>

<div class="card p-4">
    <form method="POST" asp-controller="Student" asp-action="Create">
        <div class="form-group">
            <label for="Name">ชื่อนักเรียน</label>
            <input type="text" name="Name" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-4">
            <label for="Score">คะแนน</label>
            <input type="number" name="Score" asp-for="Score" class="form-control" />
            <span asp-validation-for="Score" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-4">บันทึก</button>
    </form>
</div>
